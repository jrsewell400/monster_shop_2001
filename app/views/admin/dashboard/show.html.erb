<h1>Admin Dashboard</h1>

<table class = "all-orders">
  <tr>
    <th>Order Owner</th>
    <th>Order ID</th>
    <th>Creation Date</th>
    <th>Status</th>
    <th>Controls</th>
  </tr>
  <% @orders.each do |order| %>
    <section id="order-<%= order.id %>">
      <tr>
       <td><%= link_to order.name, "/admin/users/#{order.user.id}" %></td>
       <td><%= order.id %></td>
       <td><%= order.created_at.to_date %></td>
       <td><%= order.status %></td>
       <td>
        <%if order.status == "Packaged" %>
          <%= link_to "Ship this Order", admin_order_path(order.id), method: :patch %>
        <% end %>
      </td>
      </tr>
    </section>
  <% end %>
</table>